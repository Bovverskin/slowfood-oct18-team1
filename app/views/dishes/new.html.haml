= form_with scope: :dish, url: dishes_path, local: true do | form |
    %p
        = form.label :name
        %br/
        = form.text_field :name
    %p
        = form.label :description
        %br/
        = form.text_field :description
    %p
        = form.label :price
        %br/
        = form.text_field :price
    %p
        = form.submit
