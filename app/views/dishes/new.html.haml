= form_with scope: :dish, url: dishes_path, local: true do | form |
    - if @dish.errors.any?
        #error_explanation
            %h2
                = pluralize(@dish.errors.count, "error")
                prohibited
                this dish from being saved:
            %ul
                - @dish.errors.full_messages.each do |msg|
                    %li= msg
    %p
        = form.label :name
        %br/
        = form.text_field :name
    %p
        = form.label :description
        %br/
        = form.text_field :description
    %p
        = form.label :price
        %br/
        = form.text_field :price
    %p
        = form.label :category
        %br/
        = form.collection_select :category_id, @categories, :id, :name
        
    %p
        = form.submit
