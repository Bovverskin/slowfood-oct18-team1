= render 'navbar'

- @categories.each do |category|
    %p.text-center.border-solid.border-black.border-2.bg-yellow-lighter.h-6.flex.justify-center.items-center= category.name
    %div.flex.justify-center{id: dom_id(category)}
        - category.dishes.each do |dish|
            .flex-col.m-5.border-solid.border-black.border-2.bg-yellow-lighter.p-4.rounded-full
                %p.ml-2= "Name: #{dish.name}"
                %p.ml-2= "Description: #{dish.description}"
                %p.ml-2= "Price: #{dish.price} SEK"
                = add_to_cart(dish, 1, "Add to cart")
                - if user_signed_in? 
                    - if current_user.restaurant_owner?
                        %p.ml-2= link_to 'Update Dish', edit_dish_path(dish)
                        %p.ml-2= link_to 'Delete Dish', dish_path(dish), method: :delete
